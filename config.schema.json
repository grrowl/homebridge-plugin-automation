{
  "pluginAlias": "HomebridgeAI",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Welcome to HomebridgeAI. You can learn more at (homebridgeai.com][https://homebridgeai.com])",
  "footerDisplay": "",
  "schema": {
    "type": "object",
    "properties": {
      "apiKey": {
        "title": "API Key",
        "type": "string",
        "required": true,
        "default": "",
        "description": "You can find this at https://homebridgeai.com/account/"
      },
      "pin": {
        "title": "Homebridge PIN",
        "type": "string",
        "required": false,
        "placeholder": "000-00-000",
        "description": "Advanced setting. We'll use this instance's PIN by default"
      },
      "disabled_modes": {
        "condition": {
          "functionBody": "false"
        },
        "description": "(Not yet in use)",
        "title": "Disabled Accessory Types",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "title": "Disabled Types",
          "type": "string",
          "enum": [
            "BatteryService",
            "InputSource",
            "Lightbulb",
            "LightSensor",
            "MotionSensor",
            "Outlet",
            "ProtocolInformation",
            "ServiceLabel",
            "Speaker",
            "StatelessProgrammableSwitch",
            "Switch",
            "Television",
            "TemperatureSensor",
            "Thermostat"
          ]
        }
      }
    }
  }
}
